# ==================================
# MINI E-COMMERCE API - ENVIRONMENT VARIABLES
# ==================================
# Copy this file to .env and fill in your actual values

# Server Configuration
PORT=5050
NODE_ENV=production

# Database Configuration (REQUIRED)
DATABASE_URL=mongodb+srv://username:password@cluster.mongodb.net/database_name

# JWT Configuration (REQUIRED)
JWT_SECRET=your-32-character-secret-key-here-change-this
JWT_EXPIRE_TIME=2592000

# Email Configuration (REQUIRED for OTP)
EMAIL_HOST=smtp.your-email-provider.com
EMAIL_USER=your-email@example.com
EMAIL_PASS=your-email-password
EMAIL_PORT=587
EMAIL_SECURITY=false
EMAIL_UN_AUTH=false

# Application Settings
WEB_CACHE=false
MAX_JSON_SIZE=10MB
URL_ENCODE=true

# Rate Limiting
REQUEST_TIME=1200000
REQUEST_NUMBER=2000

# Payment Gateway (SSLCommerz) - Optional
STORE_ID=your-sslcommerz-store-id
STORE_PASSWORD=your-store-password
CURRENCY=BDT
SUCCESS_URL=https://your-domain.com/success
FAIL_URL=https://your-domain.com/fail
CANCEL_URL=https://your-domain.com/cancel
INIT_URL=https://sandbox.sslcommerz.com/gwprocess/v4/api.php

